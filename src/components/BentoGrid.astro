---
import { cn } from "@lib/utils";
import Container from "./Container.astro";
import {softGradientVariant as card} from "@tailus/themer-card"
---

<section id="features" class="scroll-mt-24">
    <Container>
        <div class="space-y-4 sm:grid sm:grid-cols-2 lg:grid-cols-3 sm:space-y-0 sm:gap-4">
            <!-- Sleep Tracking Feature -->
            <div class={cn(card.outer)}>
                <div class={cn(card.inner, "flex flex-col justify-between h-full")}>
                    <div>
                        <div class="py-6 relative aspect-video bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-primary-950/30 dark:to-secondary-950/30 rounded-lg flex items-center justify-center">
                            <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6 space-y-2">
                        <h3 class="text-gray-950 dark:text-white text-lg font-medium">Sleep Tracking & Analytics</h3>
                        <p class="text-gray-600 dark:text-gray-400">Monitor your sleep patterns, track improvements, and get personalized insights to optimize your rest.</p>
                    </div>
                </div>
            </div>

            <!-- CBT-I Modules Feature -->
            <div class={cn(card.outer)}>
                <div class={cn(card.inner, "h-full flex flex-col justify-between")}>
                    <div>
                        <div class="py-6 relative aspect-video bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-primary-950/30 dark:to-secondary-950/30 rounded-lg flex items-center justify-center">
                            <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6 space-y-2">
                        <h3 class="text-gray-950 dark:text-white text-lg font-medium">Evidence-Based CBT-I Modules</h3>
                        <p class="text-gray-600 dark:text-gray-400">Step-by-step cognitive behavioral therapy lessons designed by sleep specialists for lasting results.</p>
                    </div>
                </div>
            </div>

            <!-- Progress Tracking Feature -->
            <div class={cn(card.outer)}>
                <div class={cn(card.inner, "h-full flex flex-col justify-between")}>
                    <div>
                        <div class="py-6 relative aspect-video bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-primary-950/30 dark:to-secondary-950/30 rounded-lg flex items-center justify-center">
                            <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6 space-y-2">
                        <h3 class="text-gray-950 dark:text-white text-lg font-medium">Progress Visualization</h3>
                        <p class="text-gray-600 dark:text-gray-400">See your sleep improvements over time with detailed charts and milestone celebrations.</p>
                    </div>
                </div>
            </div>

            <!-- Sleep Hygiene Feature -->
            <div class={cn(card.outer, "sm:col-span-2")}>
                <div class={cn(card.inner, "flex flex-col justify-between h-full")}>
                    <div>
                        <div class="py-6 relative bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-primary-950/30 dark:to-secondary-950/30 rounded-lg flex items-center justify-center">
                            <div class="grid grid-cols-4 gap-4 w-full max-w-md">
                                <div class="bg-white dark:bg-gray-800 rounded-lg p-3 flex flex-col items-center">
                                    <svg class="w-6 h-6 text-primary-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                                    </svg>
                                    <span class="text-xs text-gray-600 dark:text-gray-400">Environment</span>
                                </div>
                                <div class="bg-white dark:bg-gray-800 rounded-lg p-3 flex flex-col items-center">
                                    <svg class="w-6 h-6 text-primary-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                    <span class="text-xs text-gray-600 dark:text-gray-400">Light</span>
                                </div>
                                <div class="bg-white dark:bg-gray-800 rounded-lg p-3 flex flex-col items-center">
                                    <svg class="w-6 h-6 text-primary-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <span class="text-xs text-gray-600 dark:text-gray-400">Schedule</span>
                                </div>
                                <div class="bg-white dark:bg-gray-800 rounded-lg p-3 flex flex-col items-center">
                                    <svg class="w-6 h-6 text-primary-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                    </svg>
                                    <span class="text-xs text-gray-600 dark:text-gray-400">Wellness</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-6 space-y-2">
                        <h3 class="text-gray-950 dark:text-white text-lg font-medium">Personalized Sleep Hygiene Tips</h3>
                        <p class="max-w-lg text-gray-600 dark:text-gray-400">Get customized recommendations for your bedroom environment, daily habits, and bedtime routine to create the perfect sleep foundation.</p>
                    </div>
                </div>
            </div>

            <!-- Mindfulness & Relaxation Feature -->
            <div class={cn(card.outer, "sm:row-start-2 lg:row-start-auto")}>
                <div class={cn(card.inner, "flex flex-col justify-between h-full")}>
                    <div>
                        <div class="py-6 relative aspect-video bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-primary-950/30 dark:to-secondary-950/30 rounded-lg flex items-center justify-center">
                            <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6 space-y-2">
                        <h3 class="text-gray-950 dark:text-white text-lg font-medium">Guided Relaxation</h3>
                        <p class="text-gray-600 dark:text-gray-400">Access breathing exercises, progressive muscle relaxation, and mindfulness techniques to calm your mind before bed.</p>
                    </div>
                </div>
            </div>

            <!-- Community Support Feature -->
            <div class={cn(card.outer)}>
                <div class={cn(card.inner, "flex flex-col justify-between h-full")}>
                    <div>
                        <div class="py-6 relative aspect-video bg-gradient-to-br from-primary-50 to-secondary-50 dark:from-primary-950/30 dark:to-secondary-950/30 rounded-lg flex items-center justify-center">
                            <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6 space-y-2">
                        <h3 class="text-gray-950 dark:text-white text-lg font-medium">Community Support</h3>
                        <p class="text-gray-600 dark:text-gray-400">Connect with others on their sleep improvement journey and share experiences in a supportive community.</p>
                    </div>
                </div>
            </div>
        </div>
    </Container>
</section>